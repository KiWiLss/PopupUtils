<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_pw_twotitle_outer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_small_radiu"
        >

        <!--标题-->
        <TextView
            android:id="@+id/tv_pw_twotitle_titleOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/tv_pw_twotitle_titleTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayBF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pw_twotitle_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="15dp"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/grayBF"/>
            <TextView
                android:id="@+id/tv_pw_twotitle_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sure"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="15dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>