<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_whitef7_oval">




        <TextView
            android:id="@+id/tv_pw_modify_header_take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/blue0076"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            />
        <View
            style="@style/LineLand"
            android:layout_height="0.5dp"
            android:layout_marginTop="17dp"
            />

        <TextView
            android:id="@+id/tv_pw_modify_header_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的相册"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/blue0076"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_pw_modify_header_cancel"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/bg_whitef7_oval"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/blue0076"
        android:layout_marginBottom="10dp"/>

</LinearLayout>